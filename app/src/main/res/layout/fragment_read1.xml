<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.a2lab.studyone_8.readFragment1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="#ffFFFFFF">

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/read_article"
            android:layout_width="1123dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.24"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/hint_summary"
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:background="@layout/buttonshape"
                android:text="中文摘要"
                android:textColor="@android:color/white"
                android:textSize="35sp" />

            <Button
                android:id="@+id/hint_vocabulary"
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.34"
                android:background="@layout/buttonshape"
                android:text="查詢單字"
                android:textColor="@android:color/white"
                android:textSize="35sp" />

            <Button
                android:id="@+id/hint_image"
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.33"
                android:adjustViewBounds="false"
                android:background="@layout/buttonshape"
                android:text="文章圖片"
                android:textColor="@android:color/white"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
