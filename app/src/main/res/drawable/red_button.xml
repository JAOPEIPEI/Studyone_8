<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#b03b3b" />
      <stroke
          android:width="1dp"
          android:color="#872626" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#b03b3b"
          android:endColor="#872626"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#a83434" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>

</selector >
